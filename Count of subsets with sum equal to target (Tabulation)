int perfectSum(vector<int>& arr, int target) {
        int n = arr.size();
        vector<vector<int>> dp(n+1, vector<int> (target+1, 0));
        dp[0][0] = 1;  // Do Not Forget This Line
        for(int i=1;i<=n;i++){
            for(int j=0;j<=target;j++){
                if(j - arr[i-1] >= 0)  dp[i][j] = dp[i-1][j-arr[i-1]];
                dp[i][j] += dp[i-1][j];
            }
        }
        return dp[n][target];
    }
