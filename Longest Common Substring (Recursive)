int lcs(string& s1, string& s2, int i, int j, int count){
        if(i == 0 || j == 0)
            return 0;
            
        int curr_count = count;
        if(s1[i-1] == s2[j-1])
            curr_count = lcs(s1, s2, i-1, j-1, curr_count+1);
            
        return max({curr_count, lcs(s1, s2, i-1, j, 0), lcs(s1, s2, i, j-1, 0)});
    }
    int longestCommonSubstr(string& s1, string& s2) {
        int n1 = s1.length(), n2 = s2.length();
        return lcs(s1, s2, n1, n2, 0);
    }
